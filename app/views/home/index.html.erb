      --bs-theme-lighter: #E07185;
      --bs-theme-secondary: #6c757d;
    }

    /* Override pentru Bootstrap: schimbă culorile primare */
    .bg-primary, .btn-primary, .text-primary, .border-primary, .navbar-dark.bg-primary {
      background-color: var(--bs-theme-color) !important;
    }

    .btn-outline-primary {
      color: var(--bs-theme-color);
      border-color: var(--bs-theme-color);
    }
    .btn-outline-primary:hover {
      background-color: var(--bs-theme-color);
      border-color: var(--bs-theme-color);
    }

    .text-primary {
      color: var(--bs-theme-color) !important;
    }
    
    .border-primary {
        border-color: var(--bs-theme-color) !important;
    }

    /* STIL PENTRU HEADER CU IMAGINE DE FUNDAL */
